<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ar_fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Spinner
        android:id="@+id/modelOptions"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/custom_spinner_bg"
        android:spinnerMode="dialog"
        tools:ignore="SpeakableTextPresentCheck"
        android:padding="16dp"
        android:layout_alignParentTop="true" />


    <fragment
        android:id="@+id/fragment"
        android:name="com.ustglobal.arcloudanchors.CustomArFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <RelativeLayout
        android:id="@+id/map_preview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/modelOptions"
        android:layout_alignParentBottom="true"
        android:background="@drawable/semicircle_map_background" >

        <fragment
            android:id="@+id/map_fragment"
            android:name="com.ustglobal.arcloudanchors.CustomSupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </RelativeLayout>

    <Button
        android:id="@+id/resolve"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/navigate_btn_bg"
        android:text="Navigate in AR"
        android:textColor="@android:color/white" />

    <ImageView
        android:id="@+id/image_view_compass"
        android:layout_width="133dp"
        android:layout_height="144dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:background="@drawable/circle"
        android:contentDescription="compass"
        android:padding="16dp"
        android:src="@drawable/ic_compass" />

</RelativeLayout>
